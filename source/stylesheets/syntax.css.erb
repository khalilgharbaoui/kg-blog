<%= Rouge::Themes::Monokai.render(:scope => '.highlight') %>

pre {
  border: solid 1px #000;
  background: #282828;

  line-height: 23px;
  margin-bottom: 30px;
  white-space: pre;
  overflow-x: scroll;
  word-break: inherit;
  word-wrap: inherit;




}
.highlight{
  overflow-x: auto;
  pointer-events: all;
}


.highlight td {
    padding: 8px 15px;
      color:#fff;
}

.gl {
  background: #1a1a1a;
  border-right: 1px solid #ddd;
  color: #999;
  width:15px;
  padding-right: 3px;

  /* Stop line numbers being visually selected */
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}
.highlight .nx {color:rgb(45, 167, 255);}
.highlight { background-color: #1a1a1a } /* RIGHT */
.highlight .kd {
    color: #b292fb;
  }
  .highlight .k {color: #FF4910;}

