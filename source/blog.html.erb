        <li><%= link_to "#{tag} (#{articles.size})", tag_path(tag), class: "tag#{articles.size}"  %></li>
        <% end %>
        <!-- ARRARNAME.each_with_object(Hash.new(0)) { |tag, count| count[tag] += 1 } -->
      </ul>
    </div>
  </div>
  <div class="grid-item grid-item--foot">
    <div class="grid-item-footer-content">
      <h2>By Year</h2>
      <ul id="cloud">
  <% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
      <li><%= link_to "#{year} (#{articles.size})", blog_year_path(year) %></li>
      <% end %>
    </ul>
