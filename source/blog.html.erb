<style>

.navi{ z-index: 10;}

  html {
    overflow-y: scroll;
  }

  body {
    background: #7bb7fa;
    !important;
    transition: 2000ms ease-in;

  }

  .grid-item {
    width: 300px;
    background-color: #fff;
    min-width: 175px;
    box-shadow: 0 2px 5px;
    padding-bottom: 40px;
    padding: 20px;

  }
  .grid-item-content {


        padding-bottom: 40px;
  }

  .grid-item-footer-content{


        padding-bottom: 40px;
  }

  .grid-item--foot{
    width: 300px;
    box-shadow: 0 2px 10px;
    padding-bottom: 40px;

  }

  .grid-item--achievments{

    width:60px;
    min-width: 60px;

  }
  .grid-item--contactinfo {
    width: 300px;
    height: 512px;
    background-color: rgb(255, 255, 255);
    box-shadow: 0 2px 10px;

  }

  /* highlight drag & drop */

  /* Draggabilly adds is-dragging */
  /* Packery adds class while transitioning to drop position */
  .grid-item.is-dragging,
  .grid-item.is-positioning-post-drag {
    background: rgba(68, 68, 68, 0.65);
    z-index: 2;
    /* keep dragged item on top */
  }

  .packery-drop-placeholder {
    outline: 8px dashed rgba(68, 68, 68, 0.65);
    outline-offset: -6px;
    /* transition position changing */
    -webkit-transition: -webkit-transform 0.2s;
    transition: transform 0.2s;

  }




  .stamp {
  position: absolute;

  background: #FFF;

}

